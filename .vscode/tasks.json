{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-all",
            "dependsOn": [
                "clear-header-and-lex-files",
                "generate-parser",
                "generate-lexer",
                "build-with-make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bison-flex",
            "dependsOn": [
                "generate-parser",
                "generate-lexer",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clear-header-and-lex-files",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "del /q \"${workspaceFolder}\\Source\\c2asm.tab.c\"",
                "& del /q \"${workspaceFolder}\\Headers\\c2asm.tab.h\"",
                "& del /q \"${workspaceFolder}\\Source\\lex.yy.c\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "generate-parser",
            "type": "shell",
            "command": "bison",
            "args": [
                "-y",
                "-d",
                "-o",
                "${workspaceFolder}\\Headers\\c2asm.tab.c",
                "${workspaceFolder}\\Source\\c2asm.y"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "move_files",
            "type": "shell",
            "command": "${workspaceFolder}\\move_files.bat", // Caminho para o arquivo .bat
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": "generate-parser" // Dependente da tarefa generate-parser
        },
        {
            "label": "generate-lexer",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "flex -o \"${workspaceFolder}\\Source\\lex.yy.c\" \"${workspaceFolder}\\Source\\c2asm.l\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build-with-make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$gcc", // Reconhecimento de erros do GCC
            "options": {
                "cwd": "${workspaceFolder}/.vscode" // Caminho para a pasta .vscode do projeto
            }
        }
    ]
}