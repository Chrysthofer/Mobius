{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-all",
            "dependsOn": [
                "check-file1",
                "check-file2",
                "check-file3",
                "generate-lex-yy-c",
                "generate-y-tab",
                "build-with-make"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "check-file1",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}\\.vscode\\check_files.py",
                "${workspaceFolder}\\Source\\lex.yy.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "check-file2",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}\\.vscode\\check_files.py",
                "${workspaceFolder}\\Headers\\y.tab.h"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "check-file3",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}\\.vscode\\check_files.py",
                "${workspaceFolder}\\Source\\y.tab.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "generate-lex-yy-c",
            "type": "shell",
            "command": "flex",
            "args": [
                "-o",
                "${workspaceFolder}/Source/lex.yy.c",
                "${workspaceFolder}/Source/c2asm.l"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "generate-y-tab",
            "type": "shell",
            "command": "bison",
            "args": [
                "-y",
                "-d",
                "--output=${workspaceFolder}/Source/y.tab.c",
                "--defines=${workspaceFolder}/Headers/y.tab.h",
                "${workspaceFolder}/Source/c2asm.y"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build-with-make",
            "type": "shell",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}