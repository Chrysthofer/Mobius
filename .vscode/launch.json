{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "C:\\Users\\chrys\\Desktop\\testeComp\\myccomp.exe",  // Substitua pelo nome do seu executável e a extensão .exe
            "args": ["teste.c"],  // Argumentos do programa
            "stopAtEntry": false,  // Não interromper na entrada do programa
            "cwd": "C:\\Users\\chrys\\Desktop\\testeComp",  // Diretório de trabalho
            "environment": [],  // Variáveis de ambiente personalizadas, se necessário
            "externalConsole": false,  // Não usar console externo
            "MIMode": "gdb",  // Modo de depuração (pode ser gdb, lldb, etc.)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // Nome da tarefa que compila o compilador (defina conforme sua configuração)
            "miDebuggerPath": "C:\\MinGW\bin\\gdb.exe"  // Caminho para o GDB (se estiver usando o GDB no Windows)
        }
    ]
}
